{
  "swagger": "2.0",
  "info": {
    "title": "RapidQ 賴皮怪",
    "description": "RapidQ is a party-game that makes it easy to create, share and play in minutes with your mobile.",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "JWT Token"
    }
  },
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profile": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "取得使用者資料概要 (Summary of User Data)",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/info-form": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "取得使用者表單資料 (Get User Form Data)",
        "description": "",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/room/create": {
      "post": {
        "tags": [
          "Room"
        ],
        "summary": "建立房間 (Create Room)",
        "description": "",
        "parameters": [
          {
            "name": "parameter_name",
            "in": "body",
            "description": "上傳內容",
            "schema": {
              "$ref": "#/definitions/createRoomDetail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          },
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/auth/google": {
      "get": {
        "tags": [
          "Sign-in"
        ],
        "summary": "第三方登入 - google 轉向同意頁",
        "description": "",
        "responses": {
          "302": {
            "description": "第三方登入 - google 轉向同意頁"
          },
          "500": {
            "description": "系統錯誤",
            "schema": {
              "$ref": "#/definitions/Error500"
            }
          }
        }
      }
    },
    "/auth/google/callback": {
      "get": {
        "tags": [
          "Sign-in"
        ],
        "summary": "第三方登入 - 取得 google 資訊",
        "description": "",
        "responses": {
          "200": {
            "description": "第三方登入 - 取得 google 資訊",
            "schema": {
              "$ref": "#/definitions/googleCallback"
            }
          },
          "500": {
            "description": "系統錯誤",
            "schema": {
              "$ref": "#/definitions/Error500"
            }
          }
        }
      }
    },
    "/auth/google/sign-in/{userId}": {
      "post": {
        "tags": [
          "Sign-in"
        ],
        "summary": "第三方登入 - 註冊",
        "description": "",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "parameter_name",
            "in": "body",
            "description": "請將 /google/callback 回傳資訊提供到這支 api",
            "schema": {
              "type": "object",
              "properties": {
                "phone": {
                  "type": "string",
                  "example": "0912345678"
                },
                "firstName": {
                  "type": "string",
                  "example": "小明"
                },
                "lastName": {
                  "type": "string",
                  "example": "王"
                }
              },
              "required": [
                "phone",
                "firstName",
                "lastName"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "第三方登入 google - 註冊",
            "schema": {
              "$ref": "#/definitions/googleSignUp"
            }
          },
          "500": {
            "description": "系統錯誤",
            "schema": {
              "$ref": "#/definitions/Error500"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Success": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "成功訊息"
        }
      }
    },
    "Error400": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "錯誤訊息"
        }
      }
    },
    "ErrorToken": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "false"
        },
        "message": {
          "type": "string",
          "example": "你尚未登入"
        },
        "error": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "40300"
            }
          }
        }
      }
    },
    "Error404": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "外太空也找不到這個頁面"
        }
      }
    },
    "Error500": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "系統錯誤，請稍後再試"
        }
      }
    },
    "createRoomDetail": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Erik 建立的遊戲"
        },
        "room_setting": {
          "type": "object",
          "properties": {
            "answering_seconds": {
              "type": "number",
              "example": 30
            },
            "skipping_method": {
              "type": "string",
              "example": "僅手動"
            },
            "battle_situation": {
              "type": "boolean",
              "example": true
            },
            "group_method": {
              "type": "string",
              "example": "隨機分組"
            },
            "group_num": {
              "type": "number",
              "example": 2
            },
            "maximum_player": {
              "type": "number",
              "example": 150
            }
          }
        },
        "creator_id": {
          "type": "string",
          "example": "uuid"
        }
      }
    },
    "googleCallback": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "success"
        },
        "data": {
          "type": "object",
          "properties": {
            "oauth_register": {
              "type": "boolean",
              "example": true
            },
            "token": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY0ODAwOGYxMDc4ZmMxYWEyZDNlNjU3OSIsImlhdCI6MTY4NjExMzY5MSwiZXhwIjoxNjg2NzE4NDkxfQ.MzuEB6mU7VOVeTIx9In7EYKPKbIwimKZd1eN7bEC9UE"
            },
            "userId": {
              "type": "string",
              "example": "648008f1078fc1aa2d3e6579"
            },
            "nickname": {
              "type": "string",
              "example": "小明"
            }
          }
        },
        "message": {
          "type": "string",
          "example": "第三方登入 - 取得google 資訊"
        }
      }
    },
    "googleSignUp": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "success"
        },
        "data": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY0ODAwOGYxMDc4ZmMxYWEyZDNlNjU3OSIsImlhdCI6MTY4NjExMzY5MSwiZXhwIjoxNjg2NzE4NDkxfQ.MzuEB6mU7VOVeTIx9In7EYKPKbIwimKZd1eN7bEC9UE"
            },
            "userId": {
              "type": "string",
              "example": "648008f1078fc1aa2d3e6579"
            }
          }
        },
        "message": {
          "type": "string",
          "example": "第三方登入 google - 註冊"
        }
      }
    }
  }
}